> T       _     SYSMESS 9
                LISTAT  CARRIED
                SYSMESS 10
                LISTAT  WORN
                DONE

> PEGUE   TUDO  DOALL   HERE                
> PEGUE   _     AUTOG
                DONE

> SOLTE   TUDO  DOALL   CARRIED
> SOLTE   _     AUTOD
                DONE

> TIRE    TUDO  DOALL   WORN
> TIRE    _     AUTOR
                DONE

> VISTA   TUDO  DOALL   CARRIED
> VISTA   _     AUTOW
                DONE

> R       _     CLS
                RESTART

> FIM     _     QUIT
                END

> FIM     _     DONE                    

> GRAVE   _     #ifndef "tape"
                XSAVE 0                     ; idem
                #endif
                #ifdef "tape"
                SAVE 0
                #endif
                CLS
                RESTART

> CARREG  _     #ifndef "tape"
                XLOAD  0
                #endif
                #ifdef "tape"
                LOAD   0
                #endif
                CLS
                RESTART

> GRAM    _     RAMSAVE
                CLS
                RESTART

> CRAM    _     RAMLOAD 255                 ; Recarregar todos os flags
                CLS
                RESTART

> OLHE    _     CLS
                RESTART

