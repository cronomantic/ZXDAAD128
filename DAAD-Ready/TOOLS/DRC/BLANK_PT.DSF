/PRO 0       ; Laço principal dos locais


> _       _     AT      0                   ; Iniciando o jogo
                #ifdef "canBoostSpeed"
                XSPEED  1                   ; Se a plataforma possuir boost, acelerar a velocidade da CPU para 7Mhz
                #endif
                #ifdef "hasSplitMode"       ; Se a plataforma possuir o recurso de divisão de tela, executar a divisão
                XSPLITSCR 1                 ; Comando do Maluva para dividir a tela
                #endif
                PROCESS 6                   ; Processo de inicialização
                
                

> _       _     WINDOW  0                   ; Janela de gráficos
                CLEAR   fDarkF              ; Assume que o local está iluminado
                NOTZERO 0
                ABSENT  0
                SET     fDarkF              ; Escuro

#ifndef "zx128"
> _       _     CLEAR 20
#ifndef "tape"
                ZERO fDarkF
                XPICTURE @fPlayer           ; Se existir uma imagem, carrega
#endif
#ifdef "nativeraster"
                DISPLAY @fDarkF             ; Faz o DISPLAY se não estiver escuro, senão CLS
#endif       
#ifdef "next"
                GT  20 127                  ; Se estiver escuro
                XNEXTCLS                    ; desabilitar adn clear Layer2
#endif       

> _      _      NOTZERO fDarkF
                CLS


#ifndef "noretryImage"
> _        _    GT 20 127
                XPICTURE 255                ; Se o XPICTURE falhar, tentar mostrar a imagem 255 (filler)
                #ifdef "nativeraster"
                                DISPLAY @fDarkF         ; & Display it if not dark, else CLS
                #endif       
#endif                


#ifndef "hasSplitMode"
> _        _    GT 20 127                   ; XPICTURE falhou na leitura da tela
                CLS
                WINDOW 1
                WINAT 0 0
                WINSIZE 25 127              ; Maximum window
                CLS
                SKIP 1
#endif

> _        _    WINDOW 1
                WINAT 0 0
                #ifndef "tape"
                WINAT 14 0
                #endif

#else
;ZX 128
> _       _     PICTURE @fPlayer        ; Se houver imagem, ele a carrega
                DISPLAY @fDarkF         ; Mostre se não estiver escuro, senão faça um CLS
                SKIP    2               ; Pular para janela no texto na borda inferior

> _        _    PICTURE 255             ; Na falha da imagem, carrega a imagem num. 255
                DISPLAY @fDarkF
                SKIP    1               ; Pular para janela no texto na borda inferior

> _        _    CLS                     ; Fallback sem imagem encontrada
                WINDOW  1
                WINAT   0 0
                WINSIZE 24      42      ; Toda a tela para texto
                CLS
                SKIP    1               ; Skip.

> _        _    WINDOW 1                ; Ventana na parte inferior
                WINAT  14 0
#endif

> _       _     NOTZERO fDarkF              ; Escuro
                SYSMESS 0

> _       _     ZERO    fDarkF
                DESC   @fPlayer        ; DESC No sale del bucle ahora

> _       _     PROCESS 3

; Agora usamos o processo 1 como o laço principal do jogo. Sair dele
; significa fim de jogo

> _       _     PROCESS 1

;------------------------------------------------------------------------------
/PRO 1

> _       _     PROCESS 4               ; O processo 4 era equivalente ao processo 2 no PAW (Professional Adventure Writer)

> _       _     PARSE   0               ; Pegue a sentença lógica do buffer
                PROCESS 2               ; Sentença não é válida ou timeout
                REDO

> _       _     EQ      fTurns   255     ; Valor máximo de um byte
                PLUS    fTurnsHi   1     ; Quando fTurns atingir o máximo (255), incrementar fTurnsHi
                CLEAR   fTurns
                SKIP    1

> _       _     PLUS    fTurns   1

> _       _     PROCESS 5               ; A antiga tabela de respostas do PAW 
                ISDONE                  ; Fez alguma coisa?
                REDO                    ; Sim­: processa o próximo comando do jogador

> _       _     MOVE    fPlayer         ; Não: tentamos mover o jogador
                CLS
                RESTART                 ; Jogador foi movido: salta para o início do PRO 0

> _       _     NEWTEXT
                LT      fVerb    14
                SYSMESS 7
                REDO

> _       _     SYSMESS 8
                REDO


;------------------------------------------------------------------------------
/PRO 2
> _       _     HASAT TIMEOUT
                SYSMESS 35
                DONE

> _       _     SYSMESS 6               ; Não entendi nada

;------------------------------------------------------------------------------
/PRO 3 ; Antigo processo 1 do PAW (Note que tanto a tabela de resposta como os
; antigos processos 1 e 2 do PAW agora podem estar em qualquer lugar; ou mesmo 
; não existirem, já que não há nada automático e tudo pode ser implementado 
; na própria linguagem do DAAD)

> _       _     NEWLINE
                ZERO    fDarkF            ; Não está escuro
                LISTOBJ


