/PRO 6 ; Initialise the DAAD system

> _       _     #ifdef "pc"
                    PAPER 0
                    INK 15
                #endif
                CLS
                WINDOW  1               ; Halbes Textfenster
                WINAT 14 0
                WINSIZE 25 128
                WINDOW   0
                CLS
                #ifdef "nativeraster"     ; Ortsdiagramm 0
                    PICTURE 0 
                    DISPLAY 0
