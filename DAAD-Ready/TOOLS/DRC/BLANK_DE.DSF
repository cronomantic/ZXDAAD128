                #else 
                    #ifndef "tape48"
                        CLEAR 20
                        XPICTURE 0
                        ZERO 20
                        SKIP $picture0OK
                    #endif    
                #endif

#ifndef "splitModeON"                  
>  _     _      WINDOW  1                  ; Als wir hier ankamen, war die 000-Grafik nicht vorhanden
                WINAT 0 0              
                WINSIZE 25 128             ; Wir stellen den Bildschirm auf Vollbild ein, es sei denn, es handelt sich um einen Split-Modus
#endif
$picture0OK

> _       _     WINDOW 1
                DESC    0               ; Texteinführung
                ANYKEY
                CLS
                SET   255             

$initLoop                
> _       _     MINUS   255 1          ; Setzt alle Flags zurück
                NOTEQ   255  fGFlags  ; außer GFlags!!!
                CLEAR   @255

